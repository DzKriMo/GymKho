<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GymKho" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GymKho" parent="Base.Theme.GymKho" />

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:thumbOffset">0dp</item>
    </style>


    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColor">#A022F5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>



        <style name="SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
            <item name="android:textColor">#A022F5</item>
        </style>


        <style name="SpinnerDropdownItemStyle" parent="android:Widget.TextView.SpinnerItem">
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:background">@android:color/black</item>
        </style>


</resources>