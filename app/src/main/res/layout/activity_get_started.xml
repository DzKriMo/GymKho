<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStarted"
    android:background="#161616"

    >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/getstarted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="-10dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/app_name"
        android:fontFamily="@font/alumn"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:autoSizeMaxTextSize="1000dp"
        android:autoSizeMinTextSize="20dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top7"
        app:layout_constraintBottom_toBottomOf="@id/top10"
        />


    <View
        android:id="@+id/top7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/top10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top7"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



    <View
        android:id="@+id/bottom7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/left20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/left7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <View
        android:id="@+id/right20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintRight_toRightOf="parent"        />



    <View
        android:id="@+id/right7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/getstartedbutton"
        app:layout_constraintBottom_toBottomOf="@id/bottom100"
        app:layout_constraintTop_toTopOf="@id/bottom100"
        app:layout_constraintStart_toEndOf="@id/left20"
        app:layout_constraintEnd_toStartOf="@id/right20"
        android:text="Get-started !"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="900"
        android:textColor="#ffffff"
        android:id="@+id/getStartedButton"
        android:textSize="18dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeStepGranularity="2dp"
        android:padding="18dp"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Best way to improve your health and workout progress."
        android:textSize="22dp"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeMinTextSize="10dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="700"
        android:id="@+id/bestway"
        app:layout_constraintEnd_toStartOf="@id/right7"
        app:layout_constraintStart_toEndOf="@id/left7"
        app:layout_constraintBottom_toBottomOf="@id/bottom10"
        app:layout_constraintTop_toTopOf="@id/bottom10"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Get\nbetter\nresults easily !"
        android:textSize="35dp"
        android:autoSizeMinTextSize="20dp"
        android:autoSizeMaxTextSize="200dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:textColor="#ffffff"
        android:fontFamily="@font/montserratbold"
        android:id="@+id/getbetter"
        app:layout_constraintStart_toEndOf="@id/left7"
        app:layout_constraintBottom_toBottomOf="@id/bottom15"
        app:layout_constraintTop_toTopOf="@id/bottom15"
        app:layout_constraintEnd_toEndOf="@id/bottom15"
        android:textAlignment="textStart"

        />

    <View
        android:id="@+id/bottom10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom100"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/bottom100"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom7"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/bottom15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom10"
        android:layout_marginBottom="10dp"
        app:layout_constraintHeight_percent="0.17"
        app:layout_constraintWidth_percent="0.63"
        app:layout_constraintStart_toEndOf="@id/left7"
       />


</androidx.constraintlayout.widget.ConstraintLayout>