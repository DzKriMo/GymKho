<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details.NutritionDetails"
    android:background="#17161B">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="-10dp"
/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.06"
        android:id="@+id/top6"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.1"
        android:id="@+id/left10"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.1"
        android:id="@+id/right10"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.08"
        android:id="@+id/left8"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.08"
        android:id="@+id/right8"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top6"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintHeight_percent="0.05"
        android:id="@+id/backcontainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backcontainer"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintHeight_percent="0.05"
        android:id="@+id/titleBottom"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/titleBottom"
        app:layout_constraintStart_toEndOf="@id/left8"
        app:layout_constraintEnd_toStartOf="@id/right8"
        app:layout_constraintHeight_percent="0.06"
        android:id="@+id/mealTitleContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mealTitleContainer"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintHeight_percent="0.015"
        android:id="@+id/mealTitleBottomGap"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/mealTitleBottomGap"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        android:id="@+id/purpleline"
        android:background="#A022F5"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/purpleline"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintHeight_percent="0.015"
        android:id="@+id/purplelineBottomGap"

        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/purplelineBottomGap"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintHeight_percent="0.045"
        android:id="@+id/mealsOfTheDayTitleContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mealsOfTheDayTitleContainer"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintHeight_percent="0.15"
        android:id="@+id/noMealsTopGap"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mealsOfTheDayTitleContainer"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintHeight_percent="0.075"
        android:id="@+id/MealsTopGap"
        />






    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="@id/backcontainer"
        app:layout_constraintBottom_toBottomOf="@id/backcontainer"
        app:layout_constraintStart_toStartOf="@id/backcontainer"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/back"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/backcontainer"
        app:layout_constraintBottom_toBottomOf="@id/backcontainer"
        app:layout_constraintEnd_toEndOf="@id/backcontainer"
        android:layout_marginStart="20dp"
        android:text="Nutrition Details"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserratregular"
        android:autoSizeTextType="uniform"
        android:paddingVertical="5dp"
        android:textColor="#ffffff"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeMinTextSize="10dp"
        />
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/mealTitleContainer"
        app:layout_constraintBottom_toBottomOf="@id/mealTitleContainer"
        app:layout_constraintStart_toStartOf="@id/mealTitleContainer"
        app:layout_constraintEnd_toEndOf="@id/mealTitleContainer"
        android:id="@+id/mealSpinner"
        android:background="@color/Transparent"
        android:spinnerMode="dropdown"
        android:popupTheme="@style/SpinnerDropdownItemStyle"
        style="@style/SpinnerItemStyle" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toTopOf="@id/mealTitleContainer"
        app:layout_constraintBottom_toBottomOf="@id/mealTitleContainer"
        app:layout_constraintEnd_toEndOf="@id/mealTitleContainer"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleY="0.6"
        android:scaleX="0.6"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/mealsOfTheDayTitleContainer"
        app:layout_constraintTop_toTopOf="@id/mealsOfTheDayTitleContainer"
        app:layout_constraintBottom_toBottomOf="@id/mealsOfTheDayTitleContainer"
        app:layout_constraintEnd_toEndOf="@id/mealsOfTheDayTitleContainer"
        android:text="Your meals of the day :"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserratregular"
        android:autoSizeTextType="uniform"
        android:paddingVertical="5dp"
        android:textColor="#ffffff"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeMinTextSize="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintTop_toBottomOf="@id/MealsTopGap"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/mealRecyclerView"
        tools:listitem="@layout/list_item_meal"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left10"
        app:layout_constraintEnd_toStartOf="@id/right10"
        app:layout_constraintTop_toBottomOf="@id/noMealsTopGap"
        app:layout_constraintHeight_percent="0.3"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/noMeals"
        android:visibility="gone"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.25"
            android:id="@+id/bigtxtcontainer"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/bigtxtcontainer"
            app:layout_constraintEnd_toEndOf="@id/bigtxtcontainer"
            app:layout_constraintTop_toTopOf="@id/bigtxtcontainer"
            app:layout_constraintBottom_toBottomOf="@id/bigtxtcontainer"
            android:gravity="center"
            android:text="No meals added"
            android:fontFamily="@font/montserratregular"
            android:autoSizeTextType="uniform"
            android:paddingVertical="5dp"
            android:textColor="#ffffff"
            android:autoSizeStepGranularity="2dp"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/bigtxtcontainer"
            app:layout_constraintHeight_percent="0.15"
            android:id="@+id/smalltxtcontainer"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/smalltxtcontainer"
            app:layout_constraintEnd_toEndOf="@id/smalltxtcontainer"
            app:layout_constraintTop_toTopOf="@id/smalltxtcontainer"
            app:layout_constraintBottom_toBottomOf="@id/smalltxtcontainer"
            android:gravity="center"
            android:text="Tap the button to add meals"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="900"
            android:autoSizeTextType="uniform"
            android:paddingVertical="5dp"
            android:textColor="#ffffff"
            android:autoSizeStepGranularity="2dp"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/smalltxtcontainer"
            app:layout_constraintHeight_percent="0.1"
            android:id="@+id/topgapp2"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topgapp2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="5dp"
            android:id="@+id/addButton"
            android:background="@drawable/add"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/addButton"
            app:layout_constraintEnd_toEndOf="@id/addButton"
            app:layout_constraintTop_toTopOf="@id/addButton"
            app:layout_constraintBottom_toBottomOf="@id/addButton"
            android:gravity="center"
            android:text="+"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="900"
            android:elevation="30dp"
            android:autoSizeTextType="uniform"
            android:paddingVertical="5dp"
            android:textColor="#ffffff"
            android:autoSizeStepGranularity="2dp"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.constraintlayout.widget.ConstraintLayout>