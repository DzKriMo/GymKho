<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions.Goal"
    android:background="#17161B">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="-10dp"
        />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        android:id="@+id/top3void"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.075"
        android:id="@+id/left7void"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.075"
        android:id="@+id/right7void"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left7void"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/top3void"
        app:layout_constraintHeight_percent="0.05"
        android:id="@+id/backcontainer"
        />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backcontainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.045"
        android:id="@+id/top5void1"


        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top5void1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.075"
        android:id="@+id/topTextContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topTextContainer"
        app:layout_constraintHeight_percent="0.05"
        android:id="@+id/top5void2"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left7void"
        app:layout_constraintEnd_toStartOf="@id/right7void"
        app:layout_constraintTop_toBottomOf="@id/top5void2"
        app:layout_constraintHeight_percent="0.16"
        android:id="@+id/buildContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left7void"
        app:layout_constraintEnd_toStartOf="@id/right7void"
        app:layout_constraintTop_toBottomOf="@id/buildContainer"
        app:layout_constraintHeight_percent="0.035"
        android:id="@+id/split1"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left7void"
        app:layout_constraintEnd_toStartOf="@id/right7void"
        app:layout_constraintTop_toBottomOf="@id/split1"
        app:layout_constraintHeight_percent="0.16"
        android:id="@+id/looseContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left7void"
        app:layout_constraintEnd_toStartOf="@id/right7void"
        app:layout_constraintTop_toBottomOf="@id/looseContainer"
        app:layout_constraintHeight_percent="0.035"
        android:id="@+id/split2"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left7void"
        app:layout_constraintEnd_toStartOf="@id/right7void"
        app:layout_constraintTop_toBottomOf="@id/split2"
        app:layout_constraintHeight_percent="0.16"
        android:id="@+id/stayContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/buildContainer"
        app:layout_constraintEnd_toStartOf="@id/imagesStart"
        app:layout_constraintTop_toTopOf="@id/buildContainer"
        app:layout_constraintBottom_toBottomOf="@id/buildContainer"
        app:layout_constraintHeight_percent="0.035"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/buildTextContainer"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/looseContainer"
        app:layout_constraintEnd_toStartOf="@id/imagesStart"
        app:layout_constraintTop_toTopOf="@id/looseContainer"
        app:layout_constraintBottom_toBottomOf="@id/looseContainer"
        app:layout_constraintHeight_percent="0.035"
        android:id="@+id/looseTextContainer"
        android:layout_marginHorizontal="10dp"

        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/stayContainer"
        app:layout_constraintEnd_toStartOf="@id/imagesStart"
        app:layout_constraintTop_toTopOf="@id/stayContainer"
        app:layout_constraintBottom_toBottomOf="@id/stayContainer"
        app:layout_constraintHeight_percent="0.035"
        android:id="@+id/stayTextContainer"
        android:layout_marginHorizontal="10dp"

        />










   <View
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@id/nextButtonContainer"
       app:layout_constraintHeight_percent="0.05"
       android:id="@+id/bottom5void1"
       />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.055"
        android:id="@+id/bottom10void"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom10void"
        app:layout_constraintHeight_percent="0.08"
        android:id="@+id/nextButtonContainer"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.35"
        android:id="@+id/imagesStart"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.12"
        android:id="@+id/textStart"
        />

















































    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="@id/backcontainer"
        app:layout_constraintBottom_toBottomOf="@id/backcontainer"
        app:layout_constraintStart_toStartOf="@id/backcontainer"
        app:layout_constraintEnd_toEndOf="@id/backcontainer"
        android:id="@+id/back"
        app:layout_constraintDimensionRatio="1:1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="What is your Goal ?"
        app:layout_constraintStart_toEndOf="@id/left7void"
        app:layout_constraintEnd_toStartOf="@id/right7void"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/topTextContainer"
        app:layout_constraintBottom_toBottomOf="@id/topTextContainer"
        android:fontFamily="@font/montserratregular"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeStepGranularity="2dp"
        android:padding="10dp"        />



    <CheckBox
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/buildContainer"
        app:layout_constraintBottom_toBottomOf="@id/buildContainer"
        app:layout_constraintEnd_toEndOf="@id/buildContainer"
        app:layout_constraintStart_toStartOf="@id/buildContainer"
        android:button="@null"
        android:background="@drawable/goal_checker"
        android:checked="true"
        android:id="@+id/buildMuscles"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/buildMuscles"
        app:layout_constraintBottom_toBottomOf="@id/buildContainer"
        app:layout_constraintEnd_toEndOf="@id/buildContainer"
        app:layout_constraintStart_toStartOf="@id/imagesStart"
        android:src="@drawable/build"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/buildTextContainer"
        app:layout_constraintBottom_toBottomOf="@id/buildTextContainer"
        app:layout_constraintStart_toEndOf="@id/textStart"
        app:layout_constraintEnd_toEndOf="@id/buildTextContainer"
        android:text="Build Muscles"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserratregular"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="5dp"
        android:autoSizeStepGranularity="2dp"
        />


    <CheckBox
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/looseContainer"
        app:layout_constraintBottom_toBottomOf="@id/looseContainer"
        app:layout_constraintEnd_toEndOf="@id/looseContainer"
        app:layout_constraintStart_toStartOf="@id/looseContainer"
        android:button="@null"
        android:background="@drawable/goal_checker"
        android:id="@+id/looseWeight"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/looseContainer"
        app:layout_constraintBottom_toBottomOf="@id/looseContainer"
        app:layout_constraintEnd_toEndOf="@id/looseContainer"
        app:layout_constraintStart_toStartOf="@id/imagesStart"
        android:src="@drawable/loose"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/looseTextContainer"
        app:layout_constraintBottom_toBottomOf="@id/looseTextContainer"
        app:layout_constraintStart_toEndOf="@id/textStart"
        app:layout_constraintEnd_toEndOf="@id/looseTextContainer"
        android:text="Loose Weight"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserratregular"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="5dp"
        android:autoSizeStepGranularity="2dp"
        />

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/stayContainer"
        app:layout_constraintBottom_toBottomOf="@id/stayContainer"
        app:layout_constraintEnd_toEndOf="@id/stayContainer"
        app:layout_constraintStart_toStartOf="@id/stayContainer"
        android:button="@null"
        android:background="@drawable/goal_checker"
        android:id="@+id/stayFit"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/stayContainer"
        app:layout_constraintBottom_toBottomOf="@id/stayContainer"
        app:layout_constraintEnd_toEndOf="@id/stayContainer"
        app:layout_constraintStart_toStartOf="@id/imagesStart"
        android:src="@drawable/fit"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/stayTextContainer"
        app:layout_constraintBottom_toBottomOf="@id/stayTextContainer"
        app:layout_constraintStart_toEndOf="@id/textStart"
        app:layout_constraintEnd_toEndOf="@id/stayTextContainer"
        android:text="Stay fit"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserratregular"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="5dp"
        android:autoSizeStepGranularity="2dp"
        />









    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/left7void"
        app:layout_constraintEnd_toStartOf="@id/right7void"
        app:layout_constraintTop_toTopOf="@id/nextButtonContainer"
        app:layout_constraintBottom_toBottomOf="@id/nextButtonContainer"
        android:background="@drawable/mainbutton"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat"
        android:textFontWeight="900"
        android:autoSizeMaxTextSize="50dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeStepGranularity="2dp"
        android:padding="18dp"
        android:id="@+id/next"
        />

</androidx.constraintlayout.widget.ConstraintLayout>